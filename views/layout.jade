doctype 5
html(lang="en")
  head
    - if (typeof title !== 'undefined')
      title #{title}
    - else if (typeof page !== 'undefined')
      title #{channel} logs - #{page}
    :sass
      *
        :font-family "Source Code Pro", "Monaco", monospaced
        :font-size 10pt

      body, html
        :margin 0
        :padding 0

      a, a:visited
        :color #c50

      a:hover, a:active, a:focus
        :color red

      ul
        :padding 0 0 0 2em

      div.navigation
        :background #eee
        :position fixed
        :top 0
        :left 0
        :padding .333em .666em
        :width 100%
        :height 1.5em
        span.nolink
          :color #444
        span.title
          :color #444
          :font-weight bold

      div.index, div.log
        :margin 2.5em 0 0 0
        :padding 0 .333em 1em .333em;

      div.channels
        :margin 1.5em 0 0 0
        :padding 0 .333em 1em .333em;

      table.log
        :border-collapse collapse
        tr
          td
            :vertical-align top
          td
            :border 0
            :padding .1em .5em
          td.time
            :border-right 1px solid #eee
            a
              :color #444
              :text-decoration none
            a:hover
              :text-decoration underline
            a.time-anchor
              :position relative
              :top -2.5em
              :visibility hidden

      +action
        td.nick
          :color #444
        td.content
          :font-style italic
          :color #444

      table.log
        tr.action
          +action
        tr.join
          +action
        tr.quit
          +action
        tr.part
          +action

      table.log
        tr.kick
          +action
          td.content
            :color red
            span.victim
              :font-weight bold

      table.log
        tr.nick
          +action
          td.content
            span.new_nick
              :font-weight bold

      table.log
        tr.topic
          +action
          td.content
            span.topic
              :font-weight bold

      table.log
        tr.message
          td.nick
            :color #c50
          td.content
            :color black
            span.inverse
              :color white
              :background-color black
            a.inverse
              :background-color black
            .bold
              :font-weight bold
            .italic
              :font-style italic
            .underline
              :text-decoration underline
            .monospace
              :white-space pre
              :font-family monospace

  body 
    block body
